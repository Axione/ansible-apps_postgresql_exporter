{{ ansible_managed | comment }}

[Unit]
Description=Prometheus postgresql Exporter
After=network-online.target
StartLimitInterval=0

[Service]
Type=simple
Restart=always
ExecStart=sudo -u postgres DATA_SOURCE_NAME="user=postgres host=/var/run/postgresql/ sslmode=disable" \ 
          postgres_exporter --web.listen-address=":{{ postgresql_exporter_web_port }}"
ExecReload=/bin/kill -HUP $MAINPID
SyslogIdentifier=postgresql_exporter
RestartSec=1
PrivateTmp=yes

[Install]
WantedBy=multi-user.target
